@model QLHTFastFood.Areas.Admin.Models.MonEn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    CẬP NHẬT THÔNG TIN MÓN
}
<script src="~/Areas/Assets/js/scripts2.js"></script>

@using (Html.BeginForm("Edit", "Mon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Tên món</label>
                    @Html.EditorFor(model => model.TenMon, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập tên món" } })
                    @Html.ValidationMessageFor(model => model.TenMon, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Loại món</label>
                    @{
                        Html.RenderAction("SelectLoai", "Mon");
                    }
                    @Html.ValidationMessageFor(model => model.Loai_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Đơn vị</label>
                    @{
                        Html.RenderAction("SelectDV", "Mon");
                    }
                    @Html.ValidationMessageFor(model => model.DonVi_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Kích thước</label>
                    @{
                        Html.RenderAction("SelectS", "Mon");
                    }
                    @Html.ValidationMessageFor(model => model.Size_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Thêm ảnh</label>
                    <img src="@Url.Content(Model.AnhMon)" height="150" width="150" id="previewImg" />
                    @Html.ValidationMessageFor(model => model.AnhMon, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="file" name="UploadImage" onchange="ChangeImage(this,document.getElementById('previewImg'))" />
                    @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Đơn giá</label>
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập đơn giá", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Khuyến mãi</label>
                    @Html.EditorFor(model => model.KhuyenMai_ID, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập khuyến mãi", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.KhuyenMai_ID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Mô tả</label>
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập mô tả" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group mt-4 mb-0">
                        <input type="submit" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

}
