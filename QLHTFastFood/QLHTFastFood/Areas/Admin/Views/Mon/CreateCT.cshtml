@model QLHTFastFood.Models.CONGTHUC

@{
    ViewBag.Title = "CreateCT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    THÊM MỚI NGUYÊN LIỆU VÀO CÔNG THỨC
}
<script src="~/Areas/Assets/js/scripts2.js"></script>

@using (Html.BeginForm("CreateCT", "Mon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="card-body">
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="small mb-1">Mã món</label>
                @Html.EditorFor(model => model.Mon_ID, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập tên món", @readonly = "readonly" } })
                <br/>
                @Html.ValidationMessageFor(model => model.Mon_ID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="small mb-1">Mã nguyên liệu</label>
                @{
                    Html.RenderAction("SelectNL", "Mon");
                }
                @Html.ValidationMessageFor(model => model.NguyenLieu_ID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="small mb-1">Số lượng nguyên liệu cần</label>
                @Html.EditorFor(model => model.SoLuongNLCan, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập tên nguyên liệu cần" } })
                @Html.ValidationMessageFor(model => model.SoLuongNLCan, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>  
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-group mt-4 mb-0">
                    <input type="submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </div>
    </div>
</div>

    <div>
        @Html.ActionLink("Trở lại danh sách công thức", "CongThuc", new {id = Model.Mon_ID})
    </div>

}

