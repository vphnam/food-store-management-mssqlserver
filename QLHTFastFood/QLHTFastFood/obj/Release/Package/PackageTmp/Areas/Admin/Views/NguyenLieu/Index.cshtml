@model PagedList.IPagedList<QLHTFastFood.Models.NGUYENLIEU>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    DANH SÁCH NGUYÊN LIỆU
}

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1">Bảng nguyên liệu</i>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Mã nguyên liệu
                                </th>
                                <th>
                                    Tên nhà cung cấp
                                </th>
                                <th>
                                    Tên nguyên liệu
                                </th>
                                <th>
                                    Đơn vị
                                </th>
                                <th>
                                    Số lượng tồn
                                </th>
                                <th>
                                    Mô tả
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="/Admin/NguyenLieu/Edit/@item.NguyenLieu_ID">Sửa thông tin</a>
                                        <br />
                                        <br />
                                        <a href="/Admin/NguyenLieu/EditSL/@item.NguyenLieu_ID">Cập nhật số lượng</a>
                                        <br />
                                        <br />
                                        <a href="/Admin/NguyenLieu/Delete/@item.NguyenLieu_ID">Xóa thông tin</a>
                                    </td>
                                    <td>@item.NguyenLieu_ID</td>
                                    <td>@item.NHACUNGCAP.TenNCC</td>
                                    <td>@item.TenNguyenLieu</td>
                                    <td>@item.DONVI.TenDonVi</td>
                                    <td>@item.SoLuongTon</td>
                                    <td>@item.MoTa</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Mã nguyên liệu
                                </th>
                                <th>
                                    Tên nhà cung cấp
                                </th>
                                <th>
                                    Tên nguyên liệu
                                </th>
                                <th>
                                    Đơn vị
                                </th>
                                <th>
                                    Số lượng tồn
                                </th>
                                <th>
                                    Mô tả
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/PagedList.css" rel="stylesheet" />
