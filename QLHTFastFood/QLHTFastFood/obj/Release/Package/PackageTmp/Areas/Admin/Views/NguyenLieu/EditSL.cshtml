@model QLHTFastFood.Areas.Admin.Models.NguyenLieuModel

@{
    ViewBag.Title = "EditSL";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    CẬP NHẬT SỐ LƯỢNG NGUYÊN LIỆU
}
@using (Html.BeginForm("EditSL", "NguyenLieu", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Mã nguyên liệu</label>
                    @Html.DisplayFor(model => model.MaNguyenLieu, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập tên nguyên liệu" } })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="small mb-1">Số lượng tồn</label>
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control py-4", @placeholder = "Nhập số lượng tồn" } })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="form-group mt-4 mb-0">
                        <input type="submit" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

}



