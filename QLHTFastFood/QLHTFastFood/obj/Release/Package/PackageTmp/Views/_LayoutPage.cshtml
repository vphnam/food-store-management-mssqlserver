<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KFC</title>
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Assets/css/style.css" />
    <script src="https://kit.fontawesome.com/4eb6b44f90.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="web">
        <!-- HEADER -->
        <div class="header">
            <div class="header__kesoc">
                <div class="header__oVuongColor"></div>
                <div class="header__oVuong"></div>
                <div class="header__oVuongColor"></div>
                <div class="header__oVuong"></div>
                <div class="header__oVuongColor"></div>
                <div class="header__oVuong"></div>
                <div class="header__oVuongColor"></div>
                <div class="header__oVuong"></div>
                <div class="header__oVuongColor"></div>
            </div>
            <div class="header__logo">
                <div class="header__left">
                    <a href="/Home/Index"><img src="~/Assets/img/logo.png" style="width:150px;height:150px;" alt="Logo" /></a>
                </div>
                <div class="header__right">
                    <a href="/Customer/GuiFeedback" class="header__login"><b>Gửi phản hồi</b></a> |
                    @if (Session["KhachHang"] == null)
                    {
                        <a href="/CustomerLogin/Index" class="header__login"><b>Đăng nhập</b></a>
                    }
                    @if (Session["KhachHang"] != null)
                    {
                        <div class="dropdown">
                            <button class="dropbtn"><strong>Thông tin tài khoản</strong></button>
                            <div class="dropdown-content">
                                <a href="/Customer/Detail">Xem thông tin</a>
                                <a href="/Customer/DoiMK">Đổi mật khẩu</a>
                                <a href="/CustomerLogin/Logout">Đăng xuất</a>
                            </div>
                        </div>
                    }
                    </a>
                </div>

            </div>
            <div class="clear"></div>
            @Html.Action("Loai", "Home")
            <div class="header__cart">
                <div class="cart_box" id="cartBox">
                    <div class="dropdown">
                        <a class="btn dropdown-toggle" href="~/GioHang/GioHang">
                            <span class="icon">
                                @if (Session["SoLuong"] != null)
                                {
                                    int x = (int)Session["SoLuong"];
                                    if (x != 0)
                                    {
                                        if (x > 0)
                                        {
                                            <span class="number" id="cartQty">@x</span>
                                        }
                                        else
                                        {
                                            <span class="number" id="cartQty">0</span>
                                        }
                                    }
                                    else if (x == 0)
                                    {
                                        <span class="number" id="cartQty">0</span>
                                    }
                                }
                                @if (Session["SoLuong"] == null)
                                {
                                    <span class="number" id="cartQty">0</span>
                                }
                            </span>
                            <span class="text">Giỏ hàng</span>
                            <span class="card-price" id="cartTotal"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="slideshow">
            <div class="grid wide">
                <div class="slideshow_container l-12 m-12 c-12">
                    <!-- Full-width images with number and caption text -->
                    <a href="" class="slideshow_container-sub fade">
                        <img src="~/Assets/img/slide-1.png" style="width: 100%" />
                    </a>
                    <a href="" class="slideshow_container-sub fade">
                        <img src="~/Assets/img/slide-2.png" style="width: 100%" />
                    </a>
                    <a href="" class="slideshow_container-sub fade">
                        <img src="~/Assets/img/slide-1.png" style="width: 100%" />
                    </a>
                    <a href="" class="slideshow_container-sub fade">
                        <img src="~/Assets/img/slide-4.png" style="width: 100%" />
                    </a>
                    <a href="" class="slideshow_container-sub fade">
                        <img src="~/Assets/img/slide-5.png" style="width: 100%" />
                    </a>
                </div>
                <br />
                <!-- The dots/circles -->
                <div style="text-align: center">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                    <span class="dot" onclick="currentSlide(4)"></span>
                    <span class="dot" onclick="currentSlide(5)"></span>
                </div>
            </div>
        </div>
    </div>
    <!-- PRODUCTS -->
    @RenderBody()
    <div class="clear"></div>
    </div>
    <!-- BANNER MARKETING -->
    <div class="banner">
        <div class="banner__left">
            <a href="#">
                <img src="~/Assets/img/banner_left.png" alt="banner left" />
            </a>
        </div>
        <div class="banner__right">
            <a href="#">
                <img src="~/Assets/img/banner_right.png" alt="banner right" />
            </a>
        </div>
        <div class="clear"></div>
    </div>
    <!-- FOOTER -->
    <div class="footer">
        <div class="footer__logo">
            <a href="#">
                <img src="~/Assets/img/logo_footer_vi.png" alt="logo footer" />
            </a>
        </div>
        <div class="footer__col">
            <ul>
                <li class="footer__bold">
                    <a href="#">thực đơn</a>
                </li>
                <li class="footer__bold">
                    <a href="#">nhà hàng</a>
                </li>
                <li class="footer__bold">
                    <a href="#">tin khuyến mãi</a>
                </li>
                <li class="footer__bold">
                    <a href="#">đặt tiệc sinh nhật</a>
                </li>
                <li class="footer__bold">
                    <a href="#">thành viên</a>
                </li>
            </ul>
        </div>
        <div class="footer__col">
            <ul>
                <li class="footer__bold">
                    <a href="#">giới thiệu</a>
                </li>
                <li><a href="#">kfc việt nam</a></li>
                <li><a href="#">Tin tức</a></li>
            </ul>
        </div>
        <div class="footer__col">
            <ul>
                <li class="footer__bold">
                    <a href="#">nghề nghiệp</a>
                </li>
                <li><a href="#">Tuyển dụng</a></li>
            </ul>
        </div>
        <div class="footer__bigCol">
            <div class="footer__bigCol-1">
                <ul>
                    <li class="bold">
                        <a href="#">kết nối với kfc</a>
                    </li>
                    <li><a href="#">liên hệ</a></li>
                </ul>
                <a href="#">
                    <img src="~/Assets/img/icon_fb_red.svg" alt="icon fb" />
                </a>
                <a href="#">
                    <img src="~/Assets/img/icon_yt_red.svg" alt="icon yt" />
                </a>
                <a href="#">
                    <img src="~/Assets/img/icon_ins_red.svg" alt="icon ins" />
                </a>
            </div>
            <div class="footer__bigCol-2">
                <p>Đăng ký nhận thông tin ưu đãi</p>
                <span>Nhập email</span>
                <button>Đăng ký</button>
            </div>
            <div class="clear"></div>
        </div>
        <div class="footer_bot">
            <div class="row no-gutters">
                <div class="col-12 col-lg-6">
                    <div>
                        <hr />
                        <span>
                            <p><strong>CÔNG TY LIÊN DOANH TNHH KFC VIỆT NAM</strong></p>
                            <p>
                                Số 292 Bà Triệu, P. Lê Đại Hành, Q. Hai Bà Trưng, TP. Hà
                                Nội.
                            </p>
                            <p>Điện thoại: <a href="#">(028) 38489828</a></p>
                            <p>Email: <a href="#">lienhe@kfcvietnam.com.vn</a></p>
                            <p>Mã số thuế: 0100773885</p>
                            <p>
                                Ngày cấp: 29/10/1998 - Nơi cấp: Cục Thuế Thành Phố Hà Nội
                            </p>
                        </span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="text_copyright text-center">
                        <span>
                            <p>
                                Chính sách và quy định chung | Chính sách hoạt động | Chính
                                sách bảo mật thông tin
                            </p>
                            <p>Copyright © 2021 KFC Vietnam</p>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer__kesoc">
            <div class="header__oVuongColor"></div>
            <div class="header__oVuong"></div>
            <div class="header__oVuongColor"></div>
            <div class="header__oVuong"></div>
            <div class="header__oVuongColor"></div>
            <div class="header__oVuong"></div>
            <div class="header__oVuongColor"></div>
            <div class="header__oVuong"></div>
            <div class="header__oVuongColor"></div>
        </div>
    </div>
    <script type="text/javascript" src="~/Assets/js/slide.js"></script>
</body>
</html>