@model QLHTFastFood.Areas.Admin.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage.cshtml";
}
<div class="productszz">
    <div class="card-header" style="color:black;background-color:white;"><h1 class="text-center font-weight-light my-4" style="text-align:center;">ĐĂNG NHẬP</h1></div>
    <div class="card-body">
        <form>
            @using (Html.BeginForm("Index", "CustomerLogin", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", "error");
                <fieldset>
                    <div class="form-group">
                        <label class="small mb-1" for="inputEmailAddress">Tài khoản</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control py-4", @autofocus = "autofocus", @placeholder = "Nhập tài khoản" })
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" for="inputPassword">Mật khẩu</label>
                        @Html.PasswordFor(model => model.PassWord, new { @class = "form-control py-4", @placeholder = "Nhập mật khẩu" })

                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            @Html.CheckBoxFor(model => model.RememberMe) Nhớ mật khẩu
                            <br />
                        </div>
                        <br />
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="zzbutton" style="width:100%">Đăng nhập</button>
                        </div>
                    </div>
                </fieldset>
            }
        </form>
        <div class="form-group">
            <a href="/CustomerLogin/QuenMatKhau" style="color:red;">Quên mật khẩu??</a>
        </div>
    </div>
    <div style="text-align:center;">Bạn chưa có mật khẩu?? <a href="/CustomerLogin/Register" style="color:red;">Đăng ký ngay</a></div>
</div>


