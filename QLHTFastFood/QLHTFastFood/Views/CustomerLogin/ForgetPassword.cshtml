
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="productszz">
    <div class="card-header" style="color:black;background-color:white;"><h1 class="text-center font-weight-light my-4" style="text-align:center;">QUÊN MẬT KHẨU</h1></div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="form-group" style="font-size:14px;color:red;">
                @ViewData["Loi3"]
            </div>
            <div class="form-group">
                <label class="small mb-1" for="inputEmailAddress">Nhập mật khẩu<b style="color:red;">*</b></label>
                <input type="password" name="MatKhau" placeholder="Nhập mật khẩu" class="form-control py-4" />
            </div>
            <div class="form-group" style="font-size:14px;color:red;">
                @ViewData["Loi1"]
            </div>
            <div class="form-group">
                <label class="small mb-1" for="inputEmailAddress">Xác nhận lại mật khẩu<b style="color:red;">*</b></label>
                <input type="password" name="ConfirmMatKhau" placeholder="Nhập xác nhận mật khẩu" class="form-control py-4" />
            </div>
            <div class="form-group" style="font-size:14px;color:red;">
                @ViewData["Loi2"]
            </div>
            <div class="form-group">
                <label class="small mb-1" for="inputEmailAddress">Mã bảo mật</label>
                <input type="text" name="maBaoMat" class="form-control py-4" placeholder="Nhập mã bảo mật"/>
            </div>
            <div class="form-group" style="font-size:14px;color:red;">
                @ViewData["Loi4"]
                @ViewData["Loi5"]
            </div>
            <br />
            <div class="form-group">
                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                    <input type="submit" class="zzbutton" value="Xác nhận" style="width:100%" />
                </div>
            </div>
        }
            <p style="text-align:center;">Bạn chưa nhận được mã bảo mật? <span style="color:red;">@Html.ActionLink("Gửi lại", "Chuyen", "CustomerLogin")</span></p>
    </div>
</div>




