@model IEnumerable<QLHTFastFood.Models.CTDONHANG>

@{
    ViewBag.Title = "XacNhanDonHang";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="productszz">
    <h1 class="textheader" style="text-align:center;">
        THÔNG TIN MUA HÀNG</h2>
        <small style="text-align:center" class="textheader">Mua hàng thành công, vui lòng đợi trong giây lát. Nhân viên sẽ liên hệ với bạn để xác nhận thông tin mua hàng.</small>
        <br/>
        <table align="center" border="4" style="width:100%;" class="table">
            <thead>
                <tr style="text-align:center;font-weight:bold;color:white;background-color:darkslategray">
                    <td>Tên món</td>
                    <td>Ảnh minh họa</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align:center;font-weight:bold">
                        <td width="300px">@item.MON.TenMon</td>
                        <td width="200px">
                            <a href="@Url.Action("Detail","Home", new {id = item.Mon_ID})">
                                <img src="@Url.Content(item.MON.AnhMon)" style="width:150px;height:150px;" />
                            </a>
                        </td>
                        <td>@item.SoLuongMua</td>
                        <td>@Html.FormatValue(item.DonGiaMua, "{0:#,###}")</td>
                        <td>@Html.FormatValue(item.ThanhTien, "{0:#,###}")</td>


                    </tr>
                }
            </tbody>
            <tr style="text-align:center;font-weight:bold;color:white;background-color:darkslategray">
                <td>Tên món</td>
                <td>Ảnh minh họa</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
            </tr>

            <tr style="font-weight:bold;text-align:right;color:red">
                <td colspan="3">Số lượng món: @ViewBag.TongSoLuong</td>
                <td>Giá gốc (chưa tính voucher): @ViewBag.TongTien VNĐ</td>
                <td>Tổng thực tế: @ViewBag.TongKM VNĐ</td>
            </tr>
            <tr>
                <td colspan="6"><button class="zzbutton" style="width:100%;text-align:center;">@Html.ActionLink("Xuất Excel", "XuatExcel", "Giohang")</button></td>
            </tr>
            <tr>
                <td colspan="6"><button class="zzbutton" style="width:100%;text-align:center;"><a href="/Home/Index">Hoàn tất mua hàng</a></button></td>
            </tr>
        </table>
</div>